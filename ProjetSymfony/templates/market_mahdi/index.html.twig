{% extends 'base.html.twig' %}

{% block title %}Market index{% endblock %}

{% block body %}
    <h1>Market index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Validdate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for market in markets %}
            <tr>
                <td>{{ market.id }}</td>
                <td>{{ market.name }}</td>
                <td>{{ market.description }}</td>
                <td>{{ market.validdate ? market.validdate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_market_mahdi_show', {'id': market.id}) }}">show</a>
                    <a href="{{ path('app_market_mahdi_edit', {'id': market.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_market_mahdi_new') }}">Create new</a>
{% endblock %}
